{
  "name": "cithak",
  "version": "1.0.0",
  "description": "Simple, Secure yet Powerful template manager",
  "main": "build/file/cithak.js",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "prepublishOnly": "npm run build",
    "dev": "rollup -cw",
    "build-ubuntu-latest": "pkg -t linux -o ./build/bin/cithak-linux ./cithak.js",
    "build-windows-latest": "pkg -t win -o ./build/bin/cithak-win ./cithak.js",
    "build-macos-latest": "pkg -t mac -o ./build/bin/cithak-mac ./cithak.js"
  },
  "bin": {
    "cithak": "bin/cithak",
    "cth": "bin/cithak"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/KucingKode/Cithak.git"
  },
  "bugs": {
    "url": "https://github.com/KucingKode/Cithak/issues"
  },
  "author": "KucingKode",
  "license": "MIT",
  "keywords": [
    "template manager",
    "template",
    "manager",
    "cli",
    "productivity",
    "tool"
  ],
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "arg": "^5.0.1",
    "chalk": "^4.1.2",
    "csv-parse": "^4.16.3",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "inquirer": "^8.1.2",
    "listr": "^0.14.3",
    "sass": "^1.39.2",
    "shelljs": "^0.8.4",
    "yaml": "^1.10.2"
  },
  "devDependencies": {
    "@rollup/plugin-eslint": "^8.0.1",
    "@rollup/plugin-json": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.3.2",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2"
  },
  "engines": {
    "node": ">=10.0.0"
  }
}
